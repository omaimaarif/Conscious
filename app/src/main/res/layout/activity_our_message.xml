<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    tools:context=".our_message">

    <ImageView
        android:id="@+id/target_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/menu_photo">
    </ImageView>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="428dp"
        app:layout_constraintBottom_toBottomOf="@+id/target_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <androidx.cardview.widget.CardView
            android:id="@+id/ca_1"
            android:layout_width="316dp"
            android:layout_height="118dp"
            android:layout_row="1"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/almarai_light"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:text="رسالتنا"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:fontFamily="@font/almarai_light"
                android:paddingTop="40dp"
                android:text="رسالتنا للتوعية ضد أخطار الإدمان نمكن المراهقين من اتخاذ قرار بشأنها وقمنا أيضًا بتوفير مكان يلجأ إليه من يعانون من كافة أنواع الإدمان للمساعدة"
                android:textSize="13dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ca_2"
            android:layout_width="333dp"
            android:layout_height="109dp"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/almarai_light"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:text="كيف بدأنا؟"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="122dp"
                android:layout_gravity="center"
                android:fontFamily="@font/almarai_light"
                android:paddingTop="40dp"
                android:text="بدأنا برغبة بسيطة في إحداث تأثير في العالم العربي \n باستخدام العلم والحقائق للمساعدة في نشر رسالتنا عن الآثار الضارة للإدمان\n ومساعدة من يعاني منه على التعافي "
                android:textSize="13dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/ca_3"
            android:layout_width="315dp"
            android:layout_height="111dp"
            android:layout_row="2"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/almarai_light"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:text="مهمتنا"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:fontFamily="@font/almarai_light"
                android:paddingTop="40dp"
                android:text="مهمتنا هي أن نحارب تلك العادات,وأن نوفر للأفراد فرصة كي يتخذوا قرارًا مهمًا بأنفسهم, بشأن مواجهة شعورهم ضد الإدمان وذلك برفع وعيهم بأضرارها بمساعدة العلم والحقائق"
                android:textSize="12dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </GridLayout>

    <TextView
        android:id="@+id/free"
        android:layout_width="279dp"
        android:layout_height="54dp"
        android:fontFamily="@font/almarai_light"
        android:gravity="center"
        android:text="استمر بالمحاولة الى أن تتحرر&quot;)"
        android:textColor="#92171515"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.744" />


</androidx.constraintlayout.widget.ConstraintLayout>